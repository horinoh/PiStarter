 B[0]=4:B[1]=5:B[2]=6
 ?"A = ";
 '??A
 ?A[0],A[1],A[2]
 ?"B = ";
 '??B
 ?B[0],B[1],B[2]

 ?"DOT(A,B) = ";
 ?DOT(A,B)

 ?"CROSS(A,B) = ";
 VAR C3[3]
 CROSS C3,A,B
 '??C3
 ?C3[0],C3[1],C3[2]
END

DEF VERIFY_MAT2
