COMMON DEF SPPOLY_NORMAL_BUFFER O[],U%,V%,FUNC$
 VAR I%,J%
 'RESIZE O,0
 VAR TMP
 FOR I%=0 TO LEN(O)-1 TMP=SHIFT(O) NEXT
 VAR UV[2]
 VAR P[2],PU[2],PV[2]
 FOR I%=0 TO V%-1
  FOR J%=0 TO U%-1
   VAR K%
   'UV[#X]=J%/(U%-1)
   'UV[#Y]=I%/(V%-1)
   UV[_X]=J%/(U%-1)
   UV[_Y]=I%/(V%-1)
   'RESIZE P,0
   FOR K%=0 TO LEN(P)-1 TMP=SHIFT(P) NEXT
   CALL FUNC$,P,UV

   'UV[#X]=UV[#X]+0.1
   UV[_X]=UV[_X]+0.1
   'RESIZE PU,0
   FOR K%=0 TO LEN(PU)-1 TMP=SHIFT(PU) NEXT
   CALL FUNC$,PU,UV

   'UV[#X]=UV[#X]-0.1:UV[#Y]=UV[#Y]+0.1
   UV[_X]=UV[_X]-0.1:UV[_Y]=UV[_Y]+0.1
   'RESIZE PV,0
   FOR K%=0 TO LEN(PV)-1 TMP=SHIFT(PV) NEXT
   CALL FUNC$,PV,UV

   'ARYOP #AOPSUB,PU,PU,P
   'ARYOP #AOPSUB,PV,PV,P
   FOR K%=0 TO LEN(PU)-1 PU[K%]=PU[K%]-P[K%] NEXT
   FOR K%=0 TO LEN(PV)-1 PV[K%]=PV[K%]-P[K%] NEXT
   CROSS P,PU,PV
   NORMALIZE P,P

   'PUSH O,P[#X]:PUSH O,P[#Y]:PUSH O,P[#Z]
   PUSH O,P[_X]:PUSH O,P[_Y]:PUSH O,P[_Z]
  NEXT
 NEXT
END

COMMON DEF SPPOLY_TRANSFORM O[],VB[],M[]
 VAR I%
 FOR I%=0 TO LEN(VB)-1 STEP 3
  VAR V[4]'=[VB[I%+#X],VB[I%+#Y],VB[I%+#Z],1]
  V[_X]=VB[I%+_X]:V[_Y]=VB[I%+_Y]:V[_Z]=VB[I%+_Z]:V[_W]=1
  TRANSFORM4 V,V,M
  'PUSH O,V[#X]:PUSH O,V[#Y]:PUSH O,V[#Z]
  PUSH O,V[_X]:PUSH O,V[_Y]:PUSH O,V[_Z]
 NEXT
END

COMMON DEF SPPOLY_DRAW_INDEXED IB%[],VB[]
 VAR I%
 VAR J%=0
 FOR I%=0 TO LEN(IB%)-1 STEP 3
  VAR I0%=IB%[I%+0]*3
  VAR I1%=IB%[I%+1]*3
  VAR I2%=IB%[I%+2]*3

  VAR V0[3]'=[VB[I0%+#X],VB[I0%+#Y],VB[I0%+#Z]]
  VAR V1[3]'=[VB[I1%+#X],VB[I1%+#Y],VB[I1%+#Z]]
  VAR V2[3]'=[VB[I2%+#X],VB[I2%+#Y],VB[I2%+#Z]]
  V0[_X]=VB[I0%+_X]:V0[_Y]=VB[I0%+_Y]:V0[_Z]=VB[I0%+_Z]
  V1[_X]=VB[I1%+_X]:V1[_Y]=VB[I1%+_Y]:V1[_Z]=VB[I1%+_Z]
  V2[_X]=VB[I2%+_X]:V2[_Y]=VB[I2%+_Y]:V2[_Z]=VB[I2%+_Z]

  'SPVAR J%,#X0,V0[#X]:SPVAR J%,#Y0,V0[#Y]
  'SPVAR J%,#X1,V1[#X]:SPVAR J%,#Y1,V1[#Y]
  'SPVAR J%,#X2,V2[#X]:SPVAR J%,#Y2,V2[#Y]
  SPVAR J%,_X0,V0[_X]:SPVAR J%,_Y0,V0[_Y]
  SPVAR J%,_X1,V1[_X]:SPVAR J%,_Y1,V1[_Y]
  SPVAR J%,_X2,V2[_X]:SPVAR J%,_Y2,V2[_Y]
  INC J%
  'IF J%>4095 THEN ?"SPRITE OVERFLOW":?J%:RETURN ENDIF
  IF J%>511 THEN ?"SPRITE OVERFLOW":?J%:RETURN ENDIF
 NEXT
END

